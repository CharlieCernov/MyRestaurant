<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ModelComp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/Modelolanche"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/pizzateste"
            android:background="@drawable/img"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">



            <TextView
                android:id="@+id/Titulofood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Provolone"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/Descricaofood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Melhor queijo do mundo em 8 pedaÃ§os"
                android:textColor="#575656"
                android:textSize="20sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/preco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bordapreco"
                    android:backgroundTint="@color/black"
                    android:text="R$ 32,00"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/quantidade"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:text="1"
                    android:background="@drawable/bordaquant"
                    android:textColor="#fff"
                    android:gravity="center"
                    android:layout_marginLeft="40dp"/>




            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RatingBar
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="1"
                    android:progressTint="#000"
                    android:rating="1"
                    android:stepSize="0.1" />

                <TextView
                    android:id="@+id/ModeloStars"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:text="4"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="18sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_baseline_favorite"/>


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>